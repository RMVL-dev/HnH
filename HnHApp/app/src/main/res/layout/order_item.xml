<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:parentTag="android.widget.RelativeLayout"
    android:backgroundTint="@color/silver_chalice">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/add_one"
        android:layout_height="28dp"
        android:layout_width="32dp"
        android:src="@drawable/add_one"
        android:backgroundTint="@color/preview_card_click"
        />

    <TextView
        android:id="@+id/order_items_counter"
        android:layout_height="28dp"
        android:layout_width="48dp"
        tools:text = "1"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_margin="5dp"

        android:textAppearance="@style/TextAppearanceHnH.productItemTitle"
        android:textSize="@dimen/normal_14sp"
        android:textAlignment="center"

        android:layout_toEndOf="@+id/add_one"
        android:layout_alignTop="@+id/add_one"
        android:layout_alignBottom="@+id/add_one"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/remove_one"
        android:layout_height="28dp"
        android:layout_width="32dp"
        android:src="@drawable/remove_one"
        android:backgroundTint="@color/preview_card_click"

        android:layout_toEndOf="@+id/order_items_counter"
        />


</merge>