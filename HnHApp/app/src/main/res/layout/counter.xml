<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="114dp"
    android:layout_height="28dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/counter_shape">

    <TextView
        android:id="@+id/add_one"
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:text="+"
        android:background="@drawable/add_one_shape"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:layout_margin="1dp"

        android:layout_alignParentStart="true"
        />
    
    <TextView
        android:id="@+id/order_items_counter"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"

        android:gravity="center"
        android:textAppearance="@style/TextAppearanceHnH.productItemTitle"

        tools:text = "3"

        android:layout_toEndOf="@id/add_one"
        android:layout_toStartOf="@id/remove_one"
        />

    <TextView
        android:id="@+id/remove_one"
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:text="---"
        android:background="@drawable/remove_one_shape"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:layout_margin="1dp"
        android:letterSpacing="-0.07"

        android:layout_alignParentEnd="true"
        />
    
</RelativeLayout>