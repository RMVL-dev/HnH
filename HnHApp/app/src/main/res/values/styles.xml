<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearanceHnH" parent="android:TextAppearance"/>
    <style name="TextAppearanceHnH.H1">
        <item name="android:textSize">@dimen/text_h1_size</item>
        <item name="android:lineSpacingExtra">@dimen/text_h1_line</item>
    </style>

    <style name="TextAppearanceHnH.Product"/>

    <style name="TextAppearanceHnH.Product.H1">
        <item name="android:textSize">@dimen/normal_20sp</item>
        <item name="android:lineSpacingExtra">@dimen/text_h1_line</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearanceHnH.Product.BS">
        <item name="android:textSize">@dimen/text_field</item>
        <item name="android:paddingStart">@dimen/best_seller_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/best_seller_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/best_seller_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/best_seller_padding_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/best_seller_shape</item>
    </style>

    <style name="TextAppearanceHnH.Product.Department">
        <item name="android:textColor">@color/silver_chalice</item>
        <item name="android:textSize">@dimen/normal_14sp</item>
    </style>

    <style name="TextAppearanceHnH.Product.Description"/>
    <style name="TextAppearanceHnH.Product.Materials">
        <item name="android:textColor">@color/silver_chalice</item>
    </style>

    <style name="Theme.HnH.ShapeAppearanceTextInputLayout" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeTopRight">8dp</item>
    </style>

    <style name="Theme.HnH.ShapeAppearanceMaterialButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <style name="TextAppearanceHnH.productItemTitle">
        <item name="android:textSize">@dimen/normal_14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">textMultiLine</item>
    </style>

    <style name="TextAppearanceHnH.productPrice">
        <item name="android:textSize">@dimen/text_field</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearanceHnH.productItemDepartment">
        <item name="android:textColor">@color/silver_chalice</item>
        <item name="android:textSize">@dimen/normal_12sp</item>
    </style>

    <style name="TextAppearanceHnH.textField">
        <item name="android:textSize">@dimen/text_field</item>
    </style>

    <style name="TextAppearanceHnH.hintTextField">
        <item name="android:textSize">@dimen/text_field_hint</item>
    </style>

    <style name="TextAppearanceHnH.materialButton">
        <item name="android:textSize">@dimen/text_material_button</item>
    </style>

    <style name="TextAppearanceHnH.error" >
        <item name="android:textSize">@dimen/error_assistive_text</item>
    </style>

    <style name="TextAppearanceHnH.errorHeader">
        <item name="android:textSize">@dimen/normal_18sp</item>
        <item name="android:textColor">@color/silver_chalice</item>
    </style>

    <style name="TextAppearanceHnH.errorMessage">
        <item name="android:textSize">@dimen/normal_12sp</item>
        <item name="android:textColor">@color/silver_chalice</item>
    </style>

    <style name="TextAppearanceHnH.ToolbarText" parent="@style/Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:textSize">@dimen/normal_20sp</item>
        <item name="android:titleTextColor">@color/silver_chalice</item>
    </style>
    
    <style name="Theme.HnHApp.TextInputLayout"
        parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/seashell</item>
        <item name="boxStrokeColor">@color/text_field_box_stroke_color</item>
        <item name="shapeAppearance">@style/Theme.HnH.ShapeAppearanceTextInputLayout</item>
        <item name="android:textAppearance">@style/TextAppearanceHnH.textField</item>
        <item name="hintTextAppearance">@style/TextAppearanceHnH.hintTextField</item>
        <item name="android:textColorHint">@color/silver_chalice</item>
        <item name="hintTextColor">@color/silver_chalice</item>
        <item name="endIconTint">@color/black</item>
        <item name="endIconDrawable">@drawable/password_toggle</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxStrokeErrorColor">@color/error_sign_in</item>
        <item name="errorTextAppearance">@style/TextAppearanceHnH.error</item>
        <item name="errorTextColor">@color/error_sign_in</item>
    </style>

    <style name="Theme.HnH.Button"
        parent="Widget.Material3.Button.UnelevatedButton">
        <item name="shapeAppearance">@style/Theme.HnH.ShapeAppearanceMaterialButton</item>
        <item name="android:textAppearance">@style/TextAppearanceHnH.materialButton</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="progressbar" parent="Widget.Material3.CircularProgressIndicator.Small">
        <item name="trackColor">@color/white</item>
        <item name="android:indeterminate">true</item>
    </style>
</resources>